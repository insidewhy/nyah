# Strings
# TODO: More
character := "'" ^ < ! ("\n" | "'") > ^ "'" | '"' ^ < ! ("\n" | "'") > ^ '"';
quotedString := "'" ^ < (! ("\n" | "'") )* > ^ "'" | '"' ^ < (! ( "\n" | '"')* ) > ^ '"';

class CharacterRange {
    character start;
    character end;
    begin := start '..' end;
}

private idFirst := 'a' .. 'z' | 'A' .. 'Z' | '_' ;
id := idFirst (idFirst | \d) * ;

################################################################################
# Numeric
# TODO: More
################################################################################
integer := \d+;
float   := \d+ ^ 'f' | \d+ ^ '.' ^ \d+;

number := integer | float;

