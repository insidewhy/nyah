################################################################################
# Strings
# ^ after a rule implies there is a join between all consecutive tokens
character^ := ("'" [ ! ("\n" | "'") ] "'") | ('"' [ ! ("\n" | "'") ] '"');
quotedString^ := ("'" [ (! ( "\n" | "'") )* ] "'") | 
                ('"' [ (! ( "\n" | '"') )* ] '"');

class CharacterRange {
    character start;
    character end;
    begin := start '..' end;
}

private idFirst := 'a' .. 'z' | 'A' .. 'Z' | '_' ;
id^ := idFirst (idFirst | \d) * ;

################################################################################
# Numeric
# TODO: More
################################################################################
integer := '-'? \d+;
float^   := integer 'f' | integer '.' \d+;
octal   := '-'? '0' ^ \d+;
binary  := '-'? '0x' ^ (1|0)+;

number := integer | float | octal | binary;

