@module std

class ptr_array[uint N, T] {
    operator()(idx:uint):T& = data_(idx)

    indexes ?: 0u .. N-1
    size    ?: N

    def ~self() {
        for(i, indexes) delete data_(i)
    }

    def self(init ?: [[T *]]) {
        @for(i, indexes) {
            @if(i < size init)
               data_(i) =  init(i)
            @else
                data_(i) = new T
        }
    }

  @private:
    data_ : array[N, T*]
}
